{% extends "base.html.twig" %}
{% block title %} Employés ~ Création {% endblock %}
{% block styles %}
     <link rel="stylesheet" href="{{asset('styles/employe/create.css')}}">
{% endblock %}
{% block body %}

     <div class="containers container">
          <h1>Editer un Employé</h1>
          <div class="form-container">
               <form action="" method="POST">
                    <!-- Nom -->
                    <label for="nom">Nom :</label>
                    <input type="text" id="nom" name="nom" placeholder="Entrez le nom de l'employé" value="{{employe.nom}}" required>

                    <!-- Prénom -->
                    <label for="prenom">Prénom :</label>
                    <input type="text" id="prenom" name="prenom" placeholder="Entrez le prénom de l'employé" value="{{employe.prenom}}" required>

                    <!-- Email -->
                    <label for="email">E-mail :</label>
                    <input type="email" id="email" name="email" placeholder="Entrez l'adresse e-mail" value="{{employe.email}}" required>

                    <!-- Email -->
                    <label for="phone">Téléphone :</label>
                    <input type="text" id="phone" name="phone" placeholder="Entrez le N° Tel" value="{{employe.phone}}" required>

                    <!-- Email -->
                    <label for="address">Adresse :</label>
                    <input type="text" id="address" name="address" value="{{employe.address}}" placeholder="Entrez l'adresse physique" required>

                    <!-- Poste -->
                    <label for="poste">Poste :</label>
                    <input type="text" id="poste" name="poste" value="{{employe.poste}}" placeholder="Ex. : Développeur, Manager" required>

                    <!-- Salaire -->
                    <label for="salaire">Salaire (€) :</label>
                    <input type="number" id="salaire" name="salaire" placeholder="Entrez le salaire mensuel" value="{{employe.salaire}}" required min="0" step="0.01">

                    <!-- Bouton de soumission -->
                    <button type="submit">Enregistrer les modifications</button>
               </form>
          </div>

     </div>

{% endblock %}